<% div_for comment do %>
<%= link_logo(comment.author, :size => 32) %>
<div class="published-data">
  <%= t 'comment.published_by_author_at_date',
        :author => link_to(comment.author.name, comment.author),
        :date => time_ago_in_words(comment.updated_at)
  %>
  <% if authorized?(:update, comment) %>
  <%= link_to t(:edit), polymorphic_path([ comment.commentable, comment], :action => :edit), :class => 'actions' %>
  <% end -%>
  <% if authorized?(:delete, comment) %>
  <%= link_to t(:delete), [ comment.commentable, comment ], :confirm => t('comment.confirm_delete'), :method => :delete, :class => 'actions' %>
  <% end -%>
</div>
<%= sanitize comment.content %>
<% end %>
