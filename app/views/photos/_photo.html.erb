<% div_for(photo, :class => "span-3 boxes") do -%>
  <%= link_to image_tag(polymorphic_path([ photo.owner, photo ], :format => photo.format,
                                                                 :thumbnail => "96"),
                        :alt => sanitize(photo.title),
                        :title => sanitize(photo.title)),
              [ photo.owner, photo ] %>
  <br />
  <%= link_to sanitize(photo.title), [ photo.owner, photo ] %>
<% end %>
