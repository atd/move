<% div_for post do %>
<%= link_logo(post.author, :size => 32) %>
<div class="published-data">
  <%= t 'post.published_by_author_since_time',
        :author => link_to(post.author.name, post.author),
        :date => time_ago_in_words(post.updated_at)
  %>
  <% if authorized?(:update, post) %>
  <%= link_to image_tag('icons/actions/document-edit.png'), polymorphic_path([ post.postable, post], :action => :edit), :title => t(:edit), :alt => t(:edit) %>
  <% end -%>
  <% if authorized?(:delete, post) %>
  <%= link_to image_tag('icons/actions/edit-delete.png'), [ post.postable, post ], :confirm => t('post.confirm_delete'), :method => :delete, :title => t(:delete), :alt => t(:delete) %>
  <% end -%>
</div>
<%= simple_format(auto_link(sanitize(post.text))) %>
<% end %>
