<h1>Listing posts</h1>

<table>
  <tr>
    <th>Postable</th>
    <th>Postable type</th>
    <th>Content</th>
    <th>Author</th>
    <th>Author type</th>
    <th>Parent</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.postable_id %></td>
    <td><%=h post.postable_type %></td>
    <td><%=h post.text %></td>
    <td><%=h post.author_id %></td>
    <td><%=h post.author_type %></td>
    <td><%=h post.parent_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
