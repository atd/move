<% jquery_tags('bookmark') %>

<fieldset>
<p>
  <%= form.label :uri, t('bookmark.uri') %><br />
  <%= form.text_field :uri, :class => "text"%>
</p>

<p>
  <%= form.label :title, t('bookmark.title') %><br />
  <%= form.text_field :title, :class => "title"%>
</p>

<%= form.tags_select %>

<p>
  <%= form.label :public_read, t('bookmark.public_read') %><br />
  <%= form.check_box :public_read %>
</p>
</fieldset>

<fieldset>
<p>
  <%= form.label :description, t('bookmark.description'), :onclick => "new Element.toggle('toggle');" %><br />
  <%= form.text_area :description %>
</p>

</fieldset>

<%= render :partial => 'contents/notification_form', :object => form %>
